<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
	<constant name="struts.action.extension" value=","/>
    <constant name="struts.enable.SlashesInActionNames" value="true" />

    <package name="default" namespace="/" extends="json-default">

        <default-action-ref name="image"/>

        <action name="image" class="org.xstio.ImageManager.actions.ImageAction" method="list" >
            <result name="success" type="json">
            	<param name="root">images</param>
            	<param name="excludeProperties">
            		.*galerie.*
        			.*tags.images.*
            	</param>
			</result>
        </action>
        <action name="image/*" class="org.xstio.ImageManager.actions.ImageAction" method="listGalerie" >
        	<result name="success" type="json">
        		<param name="root">images</param>
        		<param name="excludeProperties">
        			.*galerie.*
        		</param>
        		<param name="galId">{1}</param>
        	</result>
        </action>
		<!-- <action name="produit"
        		class="com.courtalon.produitBioForm.actions.ProduitAction"
         		method="liste" >
            <result name="success" type="json">
            	<param name="root">produits</param>
            	<param name="excludeProperties">
            		.*categorie.*
            	</param>
            </result>
        </action> -->
    </package>

    <!-- Add addition packages and configuration here. -->
</struts>
